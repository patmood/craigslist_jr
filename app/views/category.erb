<div class="container">
  <h2>Post List</h2>
  <table class=​"table table-bordered table-striped table-hover">​
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
        <a href=<%= "/post/#{post.id}" %> ><%= post.title %></a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>​


  <a href="/post/new" class="btn btn-large btn-primary">New Post</a>
</div>
